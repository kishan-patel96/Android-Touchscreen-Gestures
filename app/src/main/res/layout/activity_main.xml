<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:textAlignment="center"
    android:layout_centerInParent="true" >

    <TextView
        android:id="@+id/main_textid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:text="Pointer ID: "
        android:textStyle="bold"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/main_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignEnd="@+id/main_textid"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="-15dp"
        android:textAlignment="center"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/main_textx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="75dp"
        android:background="@null"
        android:text="Current X Coordinate: "
        android:textStyle="bold"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/main_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignEnd="@+id/main_textx"
        android:layout_marginLeft="175dp"
        android:layout_marginRight="-25dp"
        android:textAlignment="center"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/main_texty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:text="Current Y Coordinate: "
        android:textStyle="bold"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/main_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignEnd="@+id/main_texty"
        android:layout_marginLeft="303dp"
        android:layout_marginRight="-25dp"
        android:textAlignment="center"
        android:textSize="10dp"/>
    
    <ImageView
        android:id="@+id/main_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circleshape"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:alpha="0.5"
        android:visibility="invisible"/>


    <ImageView
        android:id="@+id/main_circle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circleshape2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:alpha="0.5"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/main_circle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circleshape3"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:alpha="0.5"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/main_circle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circleshape4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:alpha="0.5"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/main_circle5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circleshape5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:alpha="0.5"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/main_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Clear"/>

</RelativeLayout>